{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "Launch Extension",
            "type": "extensionHost",
            "request": "launch",
            "sourceMaps": true,
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}",
                "--disable-extensions"
            ]
        }
    ]{
        "version": "0.1.0",
        "configurations": [
            {
                "name": "Launch Extension",
                "type": "extensionHost",
                "request": "launch",
                "sourceMaps": true,
                "args": [
                    "--extensionDevelopmentPath=${workspaceRoot}",
                    "--disable-extensions"
                ]
            },
            {
                "name": "Extension Tests",
                "type": "extensionHost",
                "request": "launch",
                "args": [
                    "--extensionDevelopmentPath=${workspaceFolder}",
                    "--extensionTestsPath=${workspaceFolder}/out/test/suite/index"
                ],
                "outFiles": [
                    "${workspaceFolder}/out/test/**/*.js"
                ],
                "preLaunchTask": "${defaultBuildTask}"
            }
        ]
    }
}